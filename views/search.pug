extends layout

block content

    .d-flex.flex-column.flex-md-row.align-items-center.p-2.px-md-2.mb-3.bg-gray.border-bottom.shadow-sm.h-md-250
        form
            .input-group
                select#inputGroupSelect04.custom-select
                    option(selected='') What type of freelancer?
                    option Hair stylist
                    option Style Educator
                    option Assistant
                .input-group-append
                select#inputGroupSelect04.custom-select
                    option(selected='') Which location?
                    option Kandy
                    option Colombo
                    option Galle
                .input-group-append

                .input-group-append
                select#inputGroupSelect04.custom-select
                    option(selected='') Required session length?
                    option Full day
                    option Half day-Morning
                    option Half day-Evening
                .input-group-append
                    button.btn.btn-primary.w-25 Find


    .container-flex.my-1.p-2.mx-0
        .row

            .col-sm-4.w-25
                form(action='/search', method="post")
                    .form-group
                        h6 Stylist Type
                        select(name='stylist-type')#inputGroupSelect04.custom-select
                            option(selected='') What type of freelancer?
                            option Hair stylist
                            option Style Educator
                            option Assistant
                    .form-group
                        h6 Location
                        select(name='location')#inputGroupSelect04.custom-select
                            option(selected='') Which location?
                            option Kandy
                            option Colombo
                            option Galle
                    .form-group
                        h6 Date
                        input(type='date', name='date')#inputGroupSelect04.custom-select
                    .form-group
                        h6 Session Length
                        select(name='session-length')#inputGroupSelect04.custom-select
                            option(selected='') Required session length?
                            option Full day
                            option Half day-Morning
                            option Half day-Evening
                    .form-group
                        h6 Skill
                        select(name='skill')#inputGroupSelect04.custom-select
                            option(selected='') Required session skill?
                            option Hair Cuts
                            option Teaching
                            option Coloring
                    .form-group
                        h6 Payment Rate
                        .row
                            .col-sm-6
                                input#exampleInputPassword1.form-control(type='number', placeholder='Minimum', name='min')
                            .col-sm-6
                                input#exampleInputPassword1.form-control(type='number', placeholder='Maximum', name='max')
                    .form-group
                        h6 Gender
                        select(name='gender')#inputGroupSelect04.custom-select
                            option(selected='') Gender?
                            option Male
                            option Female
                            option Any
                    .form-group
                        h6 Experienced
                        select(name='experience-level')#inputGroupSelect04.custom-select
                            option(selected='') Experienced level?
                            option Qualified
                            option Average qualified
                            option Beginner

                    .form-group
                        h6 Rating
                        select#inputGroupSelect04.custom-select
                            option(selected='') Rating?
                            option 1
                            option 2
                            option 3
                            option 4
                            option 5

                    button.btn.btn-primary.w-100.my-4(type='submit') Submit


            .col-sm-8.w-75
                form(action='/profile', method="post")
                    .row
                        .card.col-md-16.p-3
                            .row
                                .col-md-4
                                    img.h-100.w-100(src='./images/stylistdp/5.jpg', name='profile-picture')
                                .col-md-4
                                    .card-block
                                        h4(name='title').card-title Emma Roberts
                                        a.btn.btn-dark.disabled.text-white(name='stytype') Hair Stylist
                                        h6.my-2(name='rating').card-title 4/5.0
                                        button.btn.btn-success.w-100.my-2.rounded.text-white(name='view', type='submit') View
                                        button.btn.btn-success.w-100.rounded-0.text-white Book now
                                .col-md-4
                                    .card-block
                                        h6.card-title Full Day
                                        a.btn.btn-dark.disabled.text-white(name='fd') LKR2000
                                        h6.card-title Half Day/Morning
                                        a.btn.btn-dark.disabled.text-white(name='hdm') LKR1200
                                        h6.card-title Half Day/Evening
                                        a.btn.btn-dark.disabled.text-white(name='hde') LKR1500






